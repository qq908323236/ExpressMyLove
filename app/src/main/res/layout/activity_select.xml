<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:persistentDrawingCache="animation"
    tools:context="fu.mr.expressmylove.activity.SelectActivity">


    <ImageView
        android:id="@+id/iv_guide4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/guide_4" />


    <ImageView
        android:id="@+id/iv_guide3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/guide_3" />


    <ImageView
        android:id="@+id/iv_guide2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/guide_2" />


    <ImageView
        android:id="@+id/iv_guide1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/guide_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_login"
            android:onClick="login"
            android:layout_marginRight="10dp"
            android:text="登陆"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_register"
            android:onClick="register"
            android:layout_marginLeft="10dp"
            android:text="注册"
            android:textColor="@color/colorTabNomar"
            android:textSize="15sp" />
    </LinearLayout>

</FrameLayout>
