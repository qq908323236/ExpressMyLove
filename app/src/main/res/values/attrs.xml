<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="outCircleColor" format="color"/>
        <attr name="outCircleWidth" format="dimension"/>
    </declare-styleable>



    <declare-styleable name="ShapeImageView">
        <attr name="shape_mode" format="enum">
            <enum name="shape" value="1" />
            <enum name="circle" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
        <attr name="frame_width" format="dimension" />
        <attr name="frame_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="WaterDropView">
        <attr name="max_circle_radius" format="dimension"/>
        <attr name="min_circle_radius" format="dimension"/>
        <attr name="waterdrop_color" format="color"/>
        <attr name="topcircle_x" format="dimension"/>
        <attr name="topcircle_y" format="dimension"/>
        <attr name="bottomcircle_x" format="dimension"/>
        <attr name="bottomcircle_y" format="dimension"/>
    </declare-styleable>
</resources>